generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  name           String
  email          String   @unique
  password_hashs String
  createdAt      DateTime @default(now())

  @@map("users")
}

model CheckIn {
  id           String    @id @default(uuid())
  userId       String
  is_validated DateTime?
  createdAt    DateTime  @default(now())

  @@map("check_ins")
}

model Gym {
  id          String   @id @default(uuid())
  title       String
  description String?
  phone       String?
  latitude    Decimal
  longitude   Decimal
  createdAt   DateTime @default(now())

  @@map("gyms")
}
